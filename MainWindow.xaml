<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:ViewModel="clr-namespace:View.ViewModel" xmlns:Model="clr-namespace:View.Model" x:Name="ContactsWindow" x:Class="Contacts.MainWindow"
        Title="Сontacts" 
        Height="375" 
        Width="500"
        MinWidth="500"
        MinHeight="300"
        Padding="15"
        Icon="/contactsIcon.png"
        mc:Ignorable="d" >
    <Window.DataContext>
        <ViewModel:MainVM>
            <ViewModel:MainVM.CurrentContact>
                <Model:Contact/>
            </ViewModel:MainVM.CurrentContact>
        </ViewModel:MainVM>
    </Window.DataContext>
    <Grid Margin="0,0,10,-6">
        <GroupBox x:Name="EditContactGroupBox" Header="Edit Contact" Margin="10,10,257,79">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="12*"/>
                    <ColumnDefinition Width="59*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="NameEditLabel" Content="Name:" HorizontalAlignment="Right" Margin="0,10,111,0" VerticalAlignment="Top" Height="31" Width="90" Grid.ColumnSpan="2"/>
                <TextBox x:Name="NameEditTextBox" 
                         Margin="10,46,14,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Height="26" 
                         Grid.ColumnSpan="2"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="NamePreviewTextInput"/>
                <Label x:Name="PNumberEditLabel" Content="Phone Number:" HorizontalAlignment="Right" Margin="0,77,111,0" VerticalAlignment="Top" RenderTransformOrigin="0.569,0.481" Height="31" Width="90" Grid.ColumnSpan="2"/>
                <TextBox x:Name="EmaiEditTextBox" 
                         Margin="10,179,14,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Height="26" 
                         Grid.ColumnSpan="2"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="EmailPreviewTextInput"/>
                <Label x:Name="EmailEditLabel" Content="Email:" HorizontalAlignment="Right" Margin="0,143,111,0" VerticalAlignment="Top" Height="31" Width="90" Grid.ColumnSpan="2"/>
                <TextBox x:Name="PNumberEditTextBox" 
                         Margin="10,113,14,0" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Top" 
                         Height="25" 
                         Grid.ColumnSpan="2"
                         Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                         PreviewTextInput="PhoneNumberPreviewTextInput"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="ReadContactGroupBox" Header="Read Contact" Margin="245,10,10,79">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="93*"/>
                    <ColumnDefinition Width="130*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="NameReadLabel" Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="90" Grid.ColumnSpan="2"/>
                <Label x:Name="PNumberReadLabel" Content="Phone Number:" Margin="10,72,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" HorizontalAlignment="Left" Width="90"/>
                <Label x:Name="EmailReadLabel" Content="Email:" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="90" Grid.ColumnSpan="2"/>
                <Label x:Name="NameReadText" 
                       Content="{Binding Name}" 
                       Margin="10,41,10,0" 
                       VerticalAlignment="Top" 
                       Grid.ColumnSpan="2"/>
                <Label x:Name="PNumberReadText" 
                       Content="{Binding PhoneNumber}" 
                       Margin="10,103,10,0" 
                       VerticalAlignment="Top" 
                       Grid.ColumnSpan="2"/>
                <Label x:Name="EmailReadText" 
                       Content="{Binding Email}" 
                       Margin="10,165,10,0" 
                       VerticalAlignment="Top" 
                       Grid.ColumnSpan="2"/>
            </Grid>
        </GroupBox>
        <Button x:Name="SaveButton" 
                Content="Save" 
                Margin="325,291,90,0" 
                VerticalAlignment="Top" 
                Height="25" 
                RenderTransformOrigin="0.501,0.554"
                Command="{Binding SaveCommand}"/>
        <Button x:Name="LoadButton" 
                Content="Load" 
                Margin="405,291,10,0" 
                VerticalAlignment="Top" 
                Height="25"
                Command="{Binding LoadCommand}">
        </Button>

    </Grid>
</Window>
