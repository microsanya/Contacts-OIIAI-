<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:ViewModel="clr-namespace:View.ViewModel"
        xmlns:Model="clr-namespace:View.Model"
        x:Name="ContactsWindow"
        x:Class="Contacts.MainWindow"
        Title="Contacts"
        Height="356"
        Width="500"
        MinWidth="500"
        MinHeight="300"
        Padding="15"
        Icon="/contactsIcon.png"
        mc:Ignorable="d">
    <Window.DataContext>
        <ViewModel:MainVM>
            <ViewModel:MainVM.CurrentContact>
                <Model:Contact/>
            </ViewModel:MainVM.CurrentContact>
        </ViewModel:MainVM>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox x:Name="EditContactGroupBox" Header="Edit Contact" Grid.Column="0" Padding="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Name:" Margin="3" Grid.Row="0" Padding="0,0,0,0"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="3,0,0,0" Grid.Row="1"/>
                <Label Content="Phone Number:" Margin="3" Grid.Row="2" Padding="0,0,0,0"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Margin="3" Grid.Row="3"/>
                <Label Content="Email:" Margin="3" Grid.Row="4" Padding="0,0,0,0"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="3" Grid.Row="5"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="ReadContactGroupBox" Header="Read Contact" Grid.Column="2" Padding="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Name:" Margin="0,3,0,3" Grid.Row="0" Padding="0, 0, 0, 0"/>
                <Label Content="{Binding Name}" FontWeight="Bold" Margin="0, 0, 0, 3" Grid.Row="1" Padding="0, 0, 0, 0"/>
                <Label Content="Phone Number:" Margin="0, 3, 0, 3" Grid.Row="2" Padding="0, 0, 0, 0"/>
                <Label Content="{Binding PhoneNumber}" FontWeight="Bold" Margin="0,3,0,3" Grid.Row="3" Padding="0, 0, 0, 0"/>
                <Label Content="Email:" Margin="0,3,0,3" Grid.Row="4" Padding="0, 0, 0, 0"/>
                <Label Content="{Binding Email}" FontWeight="Bold" Margin="0,3,0,3" Grid.Row="5" Padding="0, 0, 0, 0"/>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="3">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="75" Height="25"/>
            <Button Content="Load" Command="{Binding LoadCommand}" Width="75" Height="25" Margin="3"/>
        </StackPanel>
    </Grid>
</Window>
