<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        xmlns:ViewModel="clr-namespace:View.ViewModel"
        xmlns:Model="clr-namespace:View.Model"
        x:Name="ContactsWindow"
        x:Class="Contacts.MainWindow"
        Title="Contacts"
        Height="356"
        Width="500"
        MinWidth="500"
        MinHeight="300"
        Padding="15"
        Icon="/contactsIcon.png"
        mc:Ignorable="d">
    <Window.DataContext>
        <ViewModel:MainVM>
            <ViewModel:MainVM.CurrentContact>
                <Model:Contact/>
            </ViewModel:MainVM.CurrentContact>
        </ViewModel:MainVM>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox x:Name="EditContactGroupBox" Header="Edit Contact" Grid.Column="0" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Name:" Margin="0,4,6,2"/>
                <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="0,3,6,3"/>
                <Label Content="Phone Number:" Grid.Row="2" Margin="0,3,6,3"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Margin="0,2,6,4"/>
                <Label Content="Email:" Grid.Row="4" Margin="0,3,6,3"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Margin="0,3,6,3"/>
            </Grid>
        </GroupBox>

        <GroupBox x:Name="ReadContactGroupBox" Header="Read Contact" Grid.Column="2" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="194*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Name:" Margin="0,3,6,3" Grid.ColumnSpan="2"/>
                <Label Content="{Binding Name}" FontWeight="Bold" Margin="0,30,6,8" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <Label Content="Phone Number:" Grid.Row="1" Margin="0,20,5,2" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <Label Content="{Binding PhoneNumber}" FontWeight="Bold" Grid.Row="3" Margin="0,0,6,6" Grid.ColumnSpan="2"/>
                <Label Content="Email:" Grid.Row="3" Margin="0,28,5,10" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                <Label Content="{Binding Email}" FontWeight="Bold" Grid.Row="4" Margin="0,18,5,4" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            </Grid>
        </GroupBox>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" Width="75" Height="25"/>
            <Button Content="Load" Command="{Binding LoadCommand}" Width="75" Height="25" Margin="3"/>
        </StackPanel>
    </Grid>
</Window>
