<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View.Model.Services"
        xmlns:Model="clr-namespace:View.Model"
        xmlns:ViewModel="clr-namespace:View.ViewModel"
        x:Name="ContactsWindow"
        x:Class="Contacts.MainWindow"
        Title="Contacts"
        Width="613"
        Height="400"
        MinWidth="500"
        MinHeight="300"
        Padding="15"
        Icon="/contactsIcon.png"
        mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    <Window.DataContext>
        <ViewModel:MainVM/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="2*" MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#f8f8f8">
            <Border Padding="8" Background="{x:Null}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Content="Find:"/>
                        <TextBox
                            Grid.Column="1"
                            Height="20"
                            MinWidth="50"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            IsReadOnly="True"/>
                    </Grid>

                    <ListBox
                        x:Name="ContactsList"
                        Grid.Row="1"
                        Margin="3"
                        DisplayMemberPath="Name"
                        ItemsSource="{Binding Contacts}"
                        SelectedItem="{Binding CurrentContact, Mode=TwoWay}"/>

                    <Grid Grid.Row="2" Margin="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Height="25"
                            Margin="3"
                            Command="{Binding AddCommand}"
                            Content="Add"/>
                        <Button
                            Grid.Column="1"
                            Height="25"
                            Margin="3"
                            Command="{Binding EditCommand}"
                            Content="Edit"/>
                        <Button
                            Grid.Column="2"
                            Height="25"
                            Margin="3"
                            Command="{Binding RemoveCommand}"
                            Content="Remove"/>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <GridSplitter
            Grid.Column="1"
            Width="3"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            ResizeBehavior="PreviousAndNext"
            ResizeDirection="Columns"/>

        <Grid Grid.Column="2" Background="White">
            <Border Margin="8" Background="{x:Null}">
                <Grid>
                    <Grid.BindingGroup>
                        <BindingGroup x:Name="ContactBindingGroup"/>
                    </Grid.BindingGroup>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image
                        Source="place_contact.png"
                        Grid.Row="0"
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Width="100"
                        Height="100"
                        Margin="3"/>

                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="3"
                        Orientation="Vertical">
                        <TextBlock Text="Name:"/>
                        <TextBox
                            Margin="0 3 0 0"
                            IsReadOnly="{Binding IsReadOnlyMode}"
                            Text="{Binding CurrentContact.Name}"/>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="3"
                        Orientation="Vertical">
                        <TextBlock Text="Phone Number:"/>
                        <TextBox
                            Margin="0 3 0 0"
                            IsReadOnly="{Binding IsReadOnlyMode}"
                            Text="{Binding CurrentContact.PhoneNumber}"/>
                    </StackPanel>

                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="3"
                        Orientation="Vertical">
                        <TextBlock Text="Email:"/>
                        <TextBox
                            Margin="0 3 0 0"
                            IsReadOnly="{Binding IsReadOnlyMode}"
                            Text="{Binding CurrentContact.Email}"/>
                    </StackPanel>

                    <Button
                        Grid.Row="4"
                        Grid.Column="1"
                        Width="75"
                        Height="25"
                        Margin="0 50 0 0"
                        HorizontalAlignment="Left"
                        Visibility="{Binding IsAddOrEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Command="{Binding ApplyCommand}"
                        CommandParameter="{Binding ElementName=ContactBindingGroup}"
                        Content="Apply"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
